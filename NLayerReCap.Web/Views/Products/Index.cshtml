@{
    ViewData["Title"] = "Index";
}
@model List<ProductsWithCategoryDto>

<h1>Index</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Category</td>
            <td>CreatedDate</td>
            <td colspan="4">Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <tr>
               <td>@item.Id</td>
               <td>@item.Name</td>
               <td>@item.Price</td>
               <td>@item.Stock</td>
               <td>@item.Category.Name</td>
               <td>@item.CreatedDate</td>
               <td>
                   <a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                   <a class="btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
               </td>
           </tr>
        }
    </tbody>
</table>

